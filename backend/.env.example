# ============================================
# KAVACH-INFINITY Environment Configuration
# ============================================
# Copy this file to .env and update values

# ===================
# Application Settings
# ===================
ENVIRONMENT=development
DEBUG=true
APP_NAME=KAVACH-INFINITY
APP_VERSION=1.0.0

# ===================
# Security
# ===================
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# Database
# ===================
DATABASE_URL=postgresql+asyncpg://kavach:kavach_secure_password_2024@localhost:5432/kavach_infinity
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===================
# Redis
# ===================
REDIS_URL=redis://:kavach_redis_2024@localhost:6379/0
REDIS_POOL_SIZE=10

# ===================
# AI/ML Models
# ===================
MODEL_PATH=./models
ANOMALY_DETECTION_ENABLED=true
PREDICTION_ENABLED=true

# ===================
# MQTT (Optional)
# ===================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=kavach
MQTT_PASSWORD=mqtt_password

# ===================
# Kafka (Optional)
# ===================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=kavach-consumers

# ===================
# Monitoring
# ===================
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===================
# CORS
# ===================
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
